@{
    ViewData["Title"] = "Home Page";
}

@model List<Question>

<h2>Stack Exchange Questions</h2>

<ul>
    @foreach (var question in Model)
    {
        <li>
            <div class="question-container">
                <input type="text" class="title-input" value="@question.Title" readonly />
                @Html.ActionLink("View Answers", "Edit", new { QuestionId=question.QuestionId })
                <div class="question-box">
                    <div class="formatted-content" contentEditable="false">@Html.Raw(question.body)</div>
                </div>
            </div>
        </li>
    }
</ul>
